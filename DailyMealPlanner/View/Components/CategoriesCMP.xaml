<UserControl x:Class="DailyMealPlanner.View.Components.CategoriesCMP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DailyMealPlanner.View.Components"
             xmlns:vm ="clr-namespace:DailyMealPlanner.ViewModel.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:CategoriesCMPVM/>
    </UserControl.DataContext>
    
    <Grid Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Продукты" Style="{StaticResource PageTitile}"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Добавить категорию" Grid.Column="0"/>
            <Button Content="Редактировать категорию" Grid.Column="1"/>
            <Button Content="Удалить категорию" Grid.Column="2"/>
        </Grid>
        <local:CategoriesTableCMP Grid.Row="2"/>
    </Grid>
</UserControl>
